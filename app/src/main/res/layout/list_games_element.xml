<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:theme="@style/ListGame">

        <ImageView
            android:id="@+id/picture_game"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_game"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:text="Test"
                android:gravity="left"/>
            <TextView
                android:id="@+id/description_game"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:text="text de description"
                android:gravity="start"/>

            <TextView
                android:id="@+id/price_game"
                android:layout_width="95dp"
                android:textSize="12sp"
                android:layout_height="20dp"
                android:text="@string/price"
                android:gravity="bottom"
                />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/show_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:gravity="center"
        android:text="En savoir plus"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/button_textview"/>

</LinearLayout>