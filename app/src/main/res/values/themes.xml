<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GamePod" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.GamePod" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="AccountManageStyle" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
        <item name="android:textColorHint">#50ffffff</item>
    </style>

    <style name="ListGame" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/custom_background_list_game</item>
    </style>
    
    <style name="HomeHeader" parent="@style/Theme.AppCompat.Light">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

</resources>